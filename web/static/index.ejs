<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <section
      id="cards"
      class="bg-white px-4 pt-24 space-y-5 sm:px-6 sm:pt-32 xl:mx-auto xl:max-w-7xl lg:px-8"
    >
      <div class="mt-5 relative">
        <div
          class="-mx-px grid grid-cols-1 sm:mx-0 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
        >
          <% for (var product of products) {%>
            <div
              class="group relative rounded-lg p-4 ring-1 ring-slate-200 sm:p-6 hover:ring-1 hover:ring-sky-300 hover:shadow-lg hover:shadow-sky-300/50 transition"
            >
              <div class="mt-3 flex flex-col">
                  <p class="mt-1 text-sm text-slate-500"><%= product.primaryTitle %></p>
              </div>
              <div class="pb-4 pt-3 font-bold">
                <h2 class="text-4xl">
                  <a href="https://cartify.novabolt.dev/products/xiaomi-11-lite">
                    <!-- <span aria-hidden="true" class="absolute inset-0"></span> -->
                    <%= product.secondaryTitle %>
                  </a>
                </h2>
              </div>
              <div class="pb-4 pt-3 font-bold">
                  <p class="pt-10 text-2xl text-center font-medium">R$<%= product.price %></p>
              </div>
                
              <div class="border-t border-slate-200 py-6 px-4 sm:px-6">
                              
                  <!-- <button class="btn btn-primary btn-xl w-full bg-yellow-300 font-bold rounded-md">
                      Confirm order
                  </button> -->

                  <button class="bg-yellow-300 hover:bg-yellow-400 font-bold py-2 px-4 rounded w-full">
                      Assine JÃ¡
                  </button>
              </div>
            </div>
          <% } %>
          
      </div>
    </section>
  </body>
</html>
